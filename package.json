{
  "name": "andyshort_website",
  "version": "0.0.1",
  "description": "my website",
  "main": "server.js",
  "dependencies": {
    "pug-cli": "latest",
    "stylus": "latest",
    "parallelshell": "latest",
    "node-static": "latest",
    "cowsay": "latest"
  },
  "scripts": {
    "watch:pug": "pug --hierarchy --watch pug/ --out build/",
    "watch:stylus": "stylus --watch stylus/ --out build/styles",
    "watch": "parallelshell 'npm run watch:pug' 'npm run watch:stylus'",
    "server": "node server.js",
    "dev": "parallelshell 'npm run watch' 'npm run server'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HandyAndyShortStack/andyshort_website.git"
  },
  "author": "Andy Short",
  "homepage": "http://andyshort.website"
}
